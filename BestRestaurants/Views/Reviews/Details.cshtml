@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Review

<h2>Review Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.ReviewerName): @Html.DisplayFor(model => model.ReviewerName)</h3>
<h3>@Html.DisplayNameFor(model => model.ReviewText): @Html.DisplayFor(model => model.ReviewText)</h3>
<h3>@Html.DisplayNameFor(model => model.Rating): @Html.DisplayFor(model => model.Rating)</h3>

<p>@Html.ActionLink("Delete review", "Delete", new { id = Model.ReviewId })</p>
<p>@Html.ActionLink("Edit review", "Edit", new { id = Model.ReviewId })</p>
<p>@Html.ActionLink("Back to restaurant list", "Index", "Restaurants")</p>